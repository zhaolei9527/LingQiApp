<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgea"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x37"
                    android:background="@color/bgfff"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/rl_back"
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x10">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@mipmap/back" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="会员注册"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x16" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/bgddd"></View>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_msg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:background="@color/bgfff"
                android:orientation="horizontal"
                android:visibility="gone"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y37"
                    android:layout_centerHorizontal="true"
                    android:background="@color/bgfff"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x12"
                    android:paddingRight="@dimen/x12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="手机号"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x13" />

                    <EditText
                        android:id="@+id/et_account"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:background="@null"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x13" />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/bgea"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y37"
                    android:background="@color/bgfff"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="验证码"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x13" />

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="@dimen/x130"
                        android:layout_height="@dimen/y30"
                        android:layout_above="@+id/view"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/imageView"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x13" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="@dimen/x85"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:id="@+id/img_changecode"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x20"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_marginRight="@dimen/x15"
                        android:background="@mipmap/shuaxin" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/bgea"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y37"
                    android:background="@color/bgfff"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x12"
                    android:paddingRight="@dimen/x12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机验证码"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x13" />

                    <EditText
                        android:id="@+id/et_phonecode"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入短信验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x13" />


                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginRight="@dimen/x10"
                        android:background="@color/bgea"></View>

                    <TextView
                        android:id="@+id/btn_getSMScode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="获取验证码"
                        android:textColor="#0b7de7"
                        android:textSize="@dimen/x13" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/bgea"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y37"
                    android:background="@color/bgfff"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x12"
                    android:paddingRight="@dimen/x12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置密码"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x13" />

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:background="@null"
                        android:hint="6-20位字母、数字组合"
                        android:inputType="textPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/bgea"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y37"
                    android:background="@color/bgfff"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/x12"
                    android:paddingRight="@dimen/x12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x13" />

                    <EditText
                        android:id="@+id/et_passwordagain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x5"
                        android:background="@null"
                        android:hint="6-20位字母、数字组合"
                        android:inputType="textPassword"
                        android:maxLength="18"
                        android:singleLine="true"
                        android:textColor="@color/text333"
                        android:textColorHint="@color/text999"
                        android:textSize="@dimen/x13" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y1"
                    android:background="@color/bgea"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/x20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*注册即视为同意"
                        android:textColor="@color/text333"
                        android:textSize="@dimen/x10" />

                    <TextView
                        android:id="@+id/tv_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《领七商城会员注册协议》"
                        android:textColor="#0b7de7"
                        android:textSize="@dimen/x10" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="@dimen/x262"
                    android:layout_height="@dimen/y33"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@mipmap/btn_login"
                    android:text="注册"
                    android:textAllCaps="false"
                    android:textColor="@color/bgfff"
                    android:textSize="@dimen/x15"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
